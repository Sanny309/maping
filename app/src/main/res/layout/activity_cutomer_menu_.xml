<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanny.loader.CutomerMenu_Activity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="510dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/busStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="bus Status" />

        <Button
            android:id="@+id/busRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="bus route" />

        <Button
            android:id="@+id/ticketbooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ticket booking" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="search near hotels and coffe shop" />

        <Button
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Setting" />

        <Button
            android:id="@+id/logout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="logOut" />

    </LinearLayout>


</LinearLayout>
